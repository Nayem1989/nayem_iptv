<!-- HLS.js যুক্ত করা -->
<script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>

<video id="iptvPlayer" controls width="100%" height="auto"></video>

<script>
  var video = document.getElementById('iptvPlayer');
  var m3uUrl = 'https://iptv-org.github.io/iptv/countries/bd.m3u'; // ✅ আপনি চাইলে এখানে অন্য M3U URL দিতে পারেন

  if (Hls.isSupported()) {
    var hls = new Hls();
    hls.loadSource(m3uUrl);
    hls.attachMedia(video);
  } else if (video.canPlayType('application/vnd.apple.mpegurl')) {
    video.src = m3uUrl;
  }
</script>